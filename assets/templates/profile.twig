<div class="container d-flex justify-content-center align-items-center">

    <div class="card">
        <div style="width: 100%" class="upper">

            <img src="https://i.imgur.com/Qtrsrk5.jpg" class="img-fluid">

        </div>
        <div class="user text-center">

            <div class="profile">

                <img src="https://i.imgur.com/JgYD2nQ.jpg" class="rounded-circle" width="80">

            </div>

        </div>
        <div class="mt-5 text-center">

            <h4 class="mb-0">{{ user }}</h4>
            <span class="text-muted d-block mb-2">Hello</span>
            {% if user == "Non auth" %}
                <a class="nav-link prof-auth" href="?mode=authorization">Have already an account? Login here</a>
                {% else %}
                    <h4 class="mb-0"><a class="unset-session" href="?mode=logout">Log out</a></h4>
            {% endif %}

        </div>

    </div>

</div>